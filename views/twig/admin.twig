<body>
<header>
    <a href="/">
        <div><img src="../../images/logo2.png"></div>
    </a>
    <div class="avatar">
        <div class="avatarimg">
            <img class="img-circle" src="{{ user.avatar }}">
        </div>
        <div class="user">
            {{ user.name }}
        </div>
    </div>
    <div class="buttons">
        <a href="/" class="">
            <button class="btn btn-info btn-lg">Главная</button>
        </a>
        <a href="/user/logout" class="">
            <button class="btn btn-info btn-lg">Выйти</button>
        </a>
    </div>
</header>

<main data-role="main" class="adminpanel">
</main>


<div id="grid"></div>
<div id="paginator"></div>


<footer>
    <div></div>
    <img src="../../images/MerryChristmas.jpg" name="snowbutton" TYPE="button" onclick="$('body').snowFall();"
         title="MerryChristmas" class="snowbutton">
    {#<div>#}
    {#<h2>© SunNY</h2>#}
    {#</div>#}
    <div class="ver">
        ver 9.0
    </div>

</footer>

